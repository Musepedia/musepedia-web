image{
  width: 100%;
}

view, textarea, input, text{
  box-sizing: border-box;
}

.safe-bottom{
  padding-bottom: env(safe-area-inset-bottom);
}

.no-display{
  display: none;
}

.page-wrapper{
  padding: 10px 20px;
}

.search-bar-wrapper{
  height: 32px;
}

.popup-enable-overflow .van-popup{
  overflow-y: inherit;
}

page{
  --vscode-class: #4ec9b0;
  --vscode-function: #DCD2A1;
  --vscode-light-green: #b8d7a3;
  --vscode-orange: #FFC66D;
  --vscode-sky-blue: #67cdfe;
  --vscode-annotation: #CC9393;
  --vscode-string: #D69D85;
  --vscode-purple: #9393CC;
  --vscode-comment: #57a64a;
  --vscode-keyword: #569cd6;
  --text-color-lightest: #e7e9ec;
  --text-color-darker: #2e2e2e;
  --text-color-dark:#494949;
  --text-color-gray:#8b8b8b;
  --text-color-dark-gray:#727272;
  --text-color-light-gray: #c6c6c6;
  --backdrop-color: rgba(42, 42, 42, 0.69);
  --page-background-color: #f8f8f8;
  background-color: var(--page-background-color);

  /* 配色 */
  --primary-orange: #ff6839;
  --primary-blue: #0a69aa;
  --secondary-blue: #5699d2;
  --tertiary-blue: #d8ebf9;
  --dark-green: #2f841b;
  --primary-green: #4996a2;
  --secondary-green: #71c2cc;

  /* 主题颜色 */
  --primary-theme-color: var(--primary-orange);

  /* 组件样式 */
  --button-primary-background-color: var(--primary-theme-color);
  --button-primary-border-color: var(--primary-theme-color);
  
  --tag-primary-color: var(--primary-theme-color);
}
