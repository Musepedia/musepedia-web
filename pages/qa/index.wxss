/* pages/qa/index.wxss */
.safe-bottom{
  width: 100%;
  height: env(safe-area-inset-bottom);
  background-color: #eee;
}

additional-input{
  flex: 1;
}

.detail-text{
  width: 100%;
  padding: 10px;
}

.popup-explore-card .explore-content{
  display: block;
}

.guide{
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 10000;
  --button-round-border-radius: 4px;
  --button-normal-font-size: 1rem;
  --button-default-height: 1.6rem;
  --button-default-border-color: #ddd;
}

.guide-skip{
  position: absolute;
  z-index: 20000;
  right: 20px;
  top: 20px;
}

.guide-hint{
  position: absolute;
  z-index: 15000;
  display: flex;
  flex-direction: column;
  align-items: center;
  max-width: 200px;
  padding: 10px;
}

.guide-text{
  width: 100%;
  text-align: center;
  margin-bottom: 10px;
  font-size: 1rem;
  color: #fff;
  overflow-wrap: anywhere;
}

.guide-action{
  display: flex;
  gap: 10px;
}

.guide .van-button {
  padding: 0 8px;
}