<!--pages/museevent/index.wxml-->
<include src="/pages/helpers/page-meta.wxml"/>

<view class="muse-event">
  <view class="muse-event-head">
    <image class="event-img" src="{{event.img}}"></image>
  </view>
  <view class="muse-event-body">
    <view class="event-title">{{event.name}}</view>
    <view class="event-description">{{event.description}}</view>
    <view class="event-link">活动详情 >></view>
    <view class="event-input">
      <van-cell-group>
        <van-field
          value="{{ phone }}"
          required
          clearable
          label="手机号"
          placeholder="请输入手机号"
        />
      </van-cell-group>
      <van-button class="event-submit" type="primary" size="normal" bindtap="enrollInEvent">参加活动</van-button>
    </view>
  </view>
</view>