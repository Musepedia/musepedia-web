.login-page{
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  padding-top: 10vh;
  align-items: center;

  --button-default-height: 36px;
}

.login-avatar{
  width: 100px;
  height: 100px;
  border-radius: 50%;
}

.login-input-section{
  margin-top: 20px;
}

.input-cell{
  width: 250px;
  padding: 6px 0;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

.input-cell .text-field{
  display: inline-block;
  width: 100%;
  height: 28px;
  border-bottom: 1px solid #888;
  transition: .3s cubic-bezier(0.075, 0.82, 0.165, 1);
}

.btn-send-sms .van-button{
  width: max-content;
}

.agreement-label{
  width: 100%;
  text-align: center;
}

.agreement-checkbox{
  width: 100%;
  font-size: 14px;
  color: #233;
}

.agreement-checkbox .wx-checkbox-input{
  width: 14px; 
  height: 14px; 
  border-radius: 2px;
  box-sizing: border-box;
}
.agreement-checkbox .wx-checkbox-input.wx-checkbox-input-checked{
  background-color: var(--primary-theme-color);
  border: none;
}
.agreement-checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{
  width: 8px;
  height: 8px;
  line-height: 8px;
  /* border-radius: 50%; */
  /* text-align: center; */
  font-size: 12px; 
  color: #efefef; 
  background: transparent;
  transform: translate(-6px, -4px);
}

.btn-login{
  width: 100%;
}