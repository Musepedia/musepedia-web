/* miniprogram/pages/mine/mine.wxss */
page{
  background-color: #eeeeee;
}

.user-page{
  padding: 15px;
}

.header-card{
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  margin-top: 10px;
  margin-bottom: 15px;
  background-color: #fff;
  border-radius: 20px;
  box-shadow: 0 6px 9px #cccccc;
}

.header-row{
  padding: 15px 30px;
  display: flex;
  align-items: center;
  width: 100%;
}

.body-card{
  background-color: white;
  height: 180px;
  width: 92vw;
  border-radius: 20px;
  box-shadow: 0 8px 12px #cccccc;
}

.avatar-container{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 66px;
  width: 66px;
  border-radius: 50%;
  border: 1px solid #eee;
  box-shadow: 0 1px 2px #eee;
}

.user-avatar{
  width: 60px;
  height: 60px;
  border-radius: 50%;
}

.info-container{
  margin-left: 15px;
}

.info-hint{
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 14px;
  padding: 3px 6px;
  border: 1px solid #ddd;
}

.username{
  text-align: left;
  font-size: 16px;
  font-family: sans-serif;
}

.select-cell-group{
  padding-top: 15px;
  border-radius: 20px;
}

.section_text {
  position: fixed;
  text-align: center;
  bottom: 85px;
  left: 0;
  right: 0;
  color: darkgrey;
}
