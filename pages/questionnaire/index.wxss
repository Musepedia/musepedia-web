/* pages/preference/index.wxss */
.preference-setting{
  padding: 10px;
  width: 100%;
  height: 100vh;
  display: grid;
  grid-template-rows: auto 1fr auto;
  grid-template-areas: 'header' 'body' 'footer';

  --button-default-height: 36px;
  --button-default-border-color: #ddd;
}

.preference-setting ::-webkit-scrollbar {
  width: 4px;
  height: 4px;
  color:#000;
}

/*定义滑块 内阴影+圆角*/
.preference-setting ::-webkit-scrollbar-thumb {
  border-radius: 10px;
  -webkit-box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.3);
  box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.1);
  background-color: #ddd;
}

.setting-header{
  grid-area: 'header';
}

.setting-body{
  grid-area: 'body';
  padding: 10px 0;
}

.body-swiper{
  height: 100%;
}

.body-swiper-item{
  overflow-y: scroll;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-evenly;
  /* align-content: space-around; */
}

.setting-item{
  width: 40vw;
  height: 40vw;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin: 8px 0;
  transition: all .3s;
  border-radius: 10px;
  overflow: hidden;
}

.setting-item.selected{
  box-shadow: 0 0 8px 2px #ff683988;
}

.setting-item__image{
  position: relative;
  width: 100%;
  height: 100%;
}

.absolute-wrapper{
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 10;
}


.hot-tag{
  position: absolute;
  top: -10px;
  right: -10px;
  border-radius: 50%;
}

.hot-tag .van-tag{
  border: 2px solid #efefef;
}

.setting-item__text{
  font-size: 16px;
  padding: 2px;
  max-width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #fff;
}

.btn-skip{
  float: right
}

.setting-footer{
  grid-area: 'footer';
  display: flex;
  align-items: center;
}

.page-indicator{
  display: flex;
  margin: 0 auto;
  align-items: flex-end;
}

.page-indicator-dot{
  height: 10px;
  width: 10px;
  margin: 0 2px;
  border-radius: 50%;
  background-color: #ddd;
  transition: all .3s cubic-bezier(0.075, 0.82, 0.165, 1);
}

.page-indicator-dot.current-page{
  height: 12px;
  width: 12px;
  background-color: var(--primary-theme-color);
}