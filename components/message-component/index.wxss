.message-component{
  position: absolute;
  width: 100%;
}

.dialog-area{
  height: calc(100vh - 50px - env(safe-area-inset-bottom));
  overflow-y: scroll;
}

.input-area{
  min-height: 50px;
  width: 100%;
  position: fixed;
  bottom: env(safe-area-inset-bottom);
  left: 0;
  background-color: #eee;
  padding: 10px;
  padding-bottom: env(safe-area-inset-bottom);
}

.basic-input{
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}

.additional-input{
  overflow: hidden;
}

.input-message{
  box-sizing: content-box;
  min-height: 18px;
  max-height: 80px;
  background-color: #fff;
  padding: 5px 10px;
  border-radius: 15px;
  margin: 0 5px;
  width: 100%;
}

.input-icon{
  height: 30px;
  width: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 27px;
  margin: 0 4px;
} 

.button-send{
  height: 30px;
  font-size: 14px;
  width: 70px;
  padding: 0 8px;
  line-height: 30px;
}

.question-recommend{
  margin-top:10px;
  color: #232323;
  font-size: 14px;
}

.question-recommend__text{
  color:#0a69aa; 
  display:block
}

.ixadapt .input-message{
  padding: 0 10px
}

.hint-message{
  width: 100%;
  text-align: center;
  font-size: 12px;
  color: #888;
}
