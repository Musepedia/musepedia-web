/* components/search-bar/index.wxss */
.search-bar{
  width: 100%;
  height: 100%;
  border: 2px solid #000000;
  border-radius: 20px;
  margin-right: 10px;
  padding: 16px 10px;
  display: flex;
  align-items: center;
  font-size: 14px;
  line-height: 1;
  color: #4b4b4b;
}

.search-input{
  width: 100%;
  padding: 0 6px;
  color: #000;
}

.search-input_placeholder{
  color: #b0b0b0;
}

.scan-btn{
  font-weight: 600;
}
.clear-btn{
  width: 36px;
  margin-left: 4px;
  font-size: 12px;
  font-weight: 600;
}