/* components/explore-card/index.wxss */
.explore-card{
  --explore-card-height: 120px;
  /* min-height: var(--explore-card-height); */
  padding: 8px;
}

.explore-title{
  font-size: 16px;
  font-weight: 600;
  overflow-wrap: anywhere;

}

.explore-content{
  width: 100%;
  height: 70px;
  overflow: hidden;
}

.explore-img{
  float: right;
  width: 90px;
  height: 100%;
  border-radius: 4px;
  overflow: hidden;
}

.explore-text{
  display: inline-block;
  width: calc(100% - 100px);
  overflow-wrap: anywhere;
  padding-top: 4px;
}

.explore-text text{
  display: block;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  line-height: 22px;
}