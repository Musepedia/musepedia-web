.question-card{
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 4px 6px 2px rgba(0,0,0,.12);
  background-color: #fff;

  --padding-horizontal: 16px;
}

.exhibit-text-section{
  padding: 8px var(--padding-horizontal) 10px;
  font-weight: 600;
}

.divider{
  width: 100%;
  border-top: 1px solid #e8e8e8;
}

.divider-down{
  text-align: center;
}

.question-card-action{
  width: 100%;
}

.content-text{
  overflow-wrap: anywhere;
}